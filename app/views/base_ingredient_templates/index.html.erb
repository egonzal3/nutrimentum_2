<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All base ingredients
    </h1>

    <a href="/base_ingredients/new" class="btn btn-block btn-outline-secondary">
      Add a new base ingredient
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Calories
        </th>

        <th>
          Proteins
        </th>

        <th>
          Fats
        </th>

        <th>
          Carbohydrates
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @base_ingredients.each do |base_ingredient| %>
      <tr>
        <!-- Display base_ingredient.id start -->
        <td>
          <%= base_ingredient.id %>
        </td>
        <!-- Display base_ingredient.id end -->

        <!-- Display base_ingredient.name start -->
        <td>
          <%= base_ingredient.name %>
        </td>
        <!-- Display base_ingredient.name end -->

        <!-- Display base_ingredient.calories start -->
        <td>
          <%= base_ingredient.calories %>
        </td>
        <!-- Display base_ingredient.calories end -->

        <!-- Display base_ingredient.proteins start -->
        <td>
          <%= base_ingredient.proteins %>
        </td>
        <!-- Display base_ingredient.proteins end -->

        <!-- Display base_ingredient.fats start -->
        <td>
          <%= base_ingredient.fats %>
        </td>
        <!-- Display base_ingredient.fats end -->

        <!-- Display base_ingredient.carbohydrates start -->
        <td>
          <%= base_ingredient.carbohydrates %>
        </td>
        <!-- Display base_ingredient.carbohydrates end -->

        <!-- Display base_ingredient.created_at start -->
        <td>
          <%= time_ago_in_words(base_ingredient.created_at) %> ago
        </td>
        <!-- Display base_ingredient.created_at end -->

        <!-- Display base_ingredient.updated_at start -->
        <td>
          <%= time_ago_in_words(base_ingredient.updated_at) %> ago
        </td>
        <!-- Display base_ingredient.updated_at end -->

        <td>
          <a href="/base_ingredients/<%= base_ingredient.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @base_ingredients, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
