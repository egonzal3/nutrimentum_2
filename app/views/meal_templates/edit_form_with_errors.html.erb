<% if @meal.errors.any? %>
  <% @meal.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit meal #<%= @meal.id %>
</h1>

<hr>

<form action="/update_meal/<%= @meal.id %>" method="post">

  <div class="form-group">
    <label for="eater">
      Eater
    </label>

    <input type="text" id="eater" name="eater" class="form-control" value="<%= @meal.eater %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update meal
  </button>
</form>

<hr>

<a href="/meals">
  Go back
</a>
