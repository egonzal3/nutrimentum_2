<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All meals
    </h1>

    <a href="/meals/new" class="btn btn-block btn-outline-secondary">
      Add a new meal
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Eater
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @meals.each do |meal| %>
      <tr>
        <!-- Display meal.id start -->
        <td>
          <%= meal.id %>
        </td>
        <!-- Display meal.id end -->

        <!-- Display meal.eater start -->
        <td>
          <%= meal.eater %>
        </td>
        <!-- Display meal.eater end -->

        <!-- Display meal.created_at start -->
        <td>
          <%= time_ago_in_words(meal.created_at) %> ago
        </td>
        <!-- Display meal.created_at end -->

        <!-- Display meal.updated_at start -->
        <td>
          <%= time_ago_in_words(meal.updated_at) %> ago
        </td>
        <!-- Display meal.updated_at end -->

        <td>
          <a href="/meals/<%= meal.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
