<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All users informations
    </h1>

    <a href="/users_informations/new" class="btn btn-block btn-outline-secondary">
      Add a new users information
    </a>
  </div>
</div>





<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Email
        </th>

        <th>
          Password
        </th>

        <th>
          Name
        </th>

        <th>
          Weight
        </th>

        <th>
          Height
        </th>

        <th>
          Date of birth
        </th>

        <th>
          Age
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @users_informations.each do |users_information| %>
      <tr>
        <td>
          <%= users_information.id %>
        </td>

        <td>
          <%= users_information.email %>
        </td>

        <td>
          <%= users_information.password %>
        </td>

        <td>
          <%= users_information.name %>
        </td>

        <td>
          <%= users_information.weight %>
        </td>

        <td>
          <%= users_information.height %>
        </td>

        <td>
          <%= users_information.date_of_birth %>
        </td>

        <td>
          <%= users_information.age %>
        </td>

        <td>
          <%= time_ago_in_words(users_information.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(users_information.updated_at) %> ago
        </td>

        <td>
          <a href="/users_informations/<%= users_information.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @users_informations, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
